{
    "compilerOptions": {
        "strict": true,
        "target": "ES2018",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "rootDir": "src",
        "outDir": "lib",
        "incremental": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*"
    ]
}